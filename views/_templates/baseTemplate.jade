

doctype html
html(lang="en")
    head
        block head
            - var theTitle = titleVar ? titleVar : "Cloud Foundry Manager"
            title #{theTitle}

        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')      
        link(rel='stylesheet', href='/Styles/lib/bootstrap.min.css')
        link(rel='stylesheet', href='/Styles/lib/dropzone.min.css')
        link(rel='stylesheet', href='/Styles/main.css')

        link(rel='icon', href='/Images/favicon.png')
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false' aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/home/') Cloud Foundry Manager
                block navContent

        div.container
            block bodyContent

        script(src='/Scripts/lib/jquery.min.js')
        script(src='/Scripts/lib/bootstrap.min.js')
        block bodyScripts
